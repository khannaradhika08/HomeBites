  <!--Search Button-->
  <br>

  <div class="col-md-3"></div>
  <div class="col-md-">
    <form method="post" class="form-inline" role="form" class="pagination-centered" action="/result">
    <div class="form-group" >
      <input type="text" name="area"  size="100" class="form-control" id="search" placeholder="Enter Area">
      <input type="submit" class="btn btn-xl btn-danger" name="search" value="Find Restaurants">
    </div>
    </form>
  </div>
  <br>

  <div class="container">
    <div class="row">
      <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h1 class="gallery-title">Search Results</h1>
        <br>
        
        <table style="border: 1px solid black ; font-family:Arial ;font-weight: bold ; width: 100%; text-align: center">
          <h2>
            <tr style="border: 1px solid black">
              <th style="border: 1px solid black; padding: 15px;">#</th>
              <th style="border: 1px solid black; padding: 15px;">Name</th>
              <th style="border: 1px solid black; padding: 15px;">Address</th>
              <th style="border: 1px solid black; padding: 15px;">City</th>
              <th style="border: 1px solid black; padding: 15px;">Menu</th>
            </tr>
          </h2>
          
            <% if(data.length){
 
              for(var i = 0; i< data.length; i++) {%>  
              <tr style="border: 1px solid black">
                <th style="border: 1px solid black; padding: 15px;"><%= (i+1) %></th>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].restname%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].restaddress%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].restcity%></td>
                <td style="border: 1px solid black; padding: 15px;"><form id="tomenu" method="post" class="form-inline" role="form" class="pagination-centered" action="/menupage">
                  <div class="form-group" >
                    <button class="btn btn-xl btn-success" form="tomenu" name="Menu" value="<%= data[i].restname%>">menu</button>
                    <!-- <input type="submit" class="btn btn-xl btn-danger" name="Menu" value="<%= data[i].restname%>"> -->
                  </div>
                  </form></td>
              </tr>
              <% }
                       
               }else{ %>
                   <tr>
                      <td colspan="5" style=" padding: 15px;">Nothing found</td>
                   </tr>
                <% } %>
          
        
        </table>
      
        
      </div>

      <br />





    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bund le.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>




</body>

</html>
