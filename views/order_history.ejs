  <div class="container">
    <div class="row">
      <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h1 class="gallery-title">ORDER HISTORY</h1>
        <br>
        
        <table style="border: 1px solid black ; font-family:Arial ;font-weight: bold ; width: 100%; text-align: center">
          <h2>
            <tr style="border: 1px solid black">
              <th style="border: 1px solid black; padding: 15px;">#</th>
              <th style="border: 1px solid black; padding: 15px;">Restaurant</th>
              <th style="border: 1px solid black; padding: 15px;">Item</th>
              <th style="border: 1px solid black; padding: 15px;">Price</th>
              <th style="border: 1px solid black; padding: 15px;">Quantity</th>
              <th style="border: 1px solid black; padding: 15px;">Delivered</th>
            </tr>
          </h2>
          
            <% var total =0;
            if(data.length){
 
              for(var i = 0; i< data.length; i++) { total=total+data[i].price*data[i].quantity; %>  
              <tr style="border: 1px solid black">
                <th style="border: 1px solid black; padding: 15px;"><%= (i+1) %></th>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].restname%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].item%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].price%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].quantity%></td>
                <td style="border: 1px solid black; padding: 15px;"><%= data[i].delivered%></td>
              </tr>
              <% }%>
              <tr>
              <td colspan="6" style=" padding: 15px;">Total Amount: Rs <%=total%>.00 </td>  
                </tr>
                <tr>
                    <td colspan="6" style="border: 1px solid black; padding: 15px;"><form method="get" class="form-inline" role="form" class="pagination-centered" action="/index">
                        <div class="form-group" >
                          <input type="submit" class="btn btn-xl btn-success" name="Menu" value="Continue shopping">
                        </div>
                        </form></td>
                </tr>
               <%}else{ %>
                   <tr>
                      <td colspan="6" style=" padding: 15px;">Nothing found</td>
                   </tr>
                <% } %>
          
        
        </table>
      
        
      </div>

      <br />





    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bund le.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
